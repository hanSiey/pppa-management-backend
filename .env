# --- CORE DJANGO SETTINGS ---
# Set to False for production safety
DEBUG=False

# Generate a new, secure key (see command below)
SECRET_KEY=change-me-to-a-secure-random-key-50-chars

# Comma-separated list of domains that can access this backend
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,127.0.0.1


# --- DATABASE CONNECTION ---
# Example for PostgreSQL (Recommended for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=parliament_db
DB_USER=parliament_user
DB_PASSWORD=your_secure_db_password
DB_HOST=localhost
DB_PORT=5432


# --- CORS HEADERS ---
# The frontend URLs that are allowed to talk to this API
# If you are testing locally, include localhost:3000
CORS_ALLOWED_ORIGINS=https://yourdomain.com


# --- FILE UPLOADS ---
# Max file size in bytes (e.g., 10MB = 10485760)
MAX_UPLOAD_SIZE=10485760


# --- SECURITY & JWT ---
# How long a user stays logged in (in minutes)
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=1


# --- EMAIL SETTINGS ---
# Required for sending reservations and notifications
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
# Your actual SendGrid (or other provider) API key
EMAIL_HOST_PASSWORD=your-email-provider-api-key
DEFAULT_FROM_EMAIL=noreply@parliamentplating.com